<!DOCTYPE html>
<html>
  <head>
    <title>UStuck</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
    <nav>
      <%= form_tag "/logout", method: :delete do %>
        <%= submit_tag "LOG OUT" %>
      <% end %>
    </nav>
    <% end %>
    <%= yield %>
  </body>
</html>
